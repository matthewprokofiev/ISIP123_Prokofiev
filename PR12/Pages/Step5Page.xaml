<Page x:Class="PR12.Step5Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Step5Page">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Оформление заявки" Style="{StaticResource HeaderStyle}"/>

            <Label Content="ФИО:"/>
            <TextBox Name="txtName" TextChanged="Input_TextChanged"/>

            <Label Content="Телефон (только цифры):"/>
            <TextBox Name="txtPhone" TextChanged="Input_TextChanged" MaxLength="11"/>

            <Label Content="Email:"/>
            <TextBox Name="txtEmail" TextChanged="Input_TextChanged"/>

            <TextBlock Text="Итоговая сводка:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Name="txtSummary" TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Назад" Click="BtnBack_Click" Width="100"/>
                <Button Name="btnSubmit" Content="Отправить заявку" Click="BtnSubmit_Click" Width="140" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

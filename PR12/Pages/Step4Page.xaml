<Page x:Class="PR12.Step4Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Step4Page">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Расчет автокредита" Style="{StaticResource HeaderStyle}"/>

            <TextBlock Text="Полная стоимость авто:" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding TotalPrice, StringFormat=C}" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Первоначальный взнос (%):"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Slider Name="sliderDownPayment" Minimum="0" Maximum="90" Value="{Binding DownPaymentPercent}" 
                        TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=sliderDownPayment, Path=Value, StringFormat={}{0}%}" VerticalAlignment="Center"/>
            </Grid>
            <TextBlock Text="{Binding CreditDownPaymentAmount, StringFormat='Сумма взноса: {0:C}'}" Foreground="Gray" Margin="0,0,0,20"/>

            <Label Content="Срок кредита (месяцев):"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Slider Name="sliderTerm" Minimum="12" Maximum="96" Value="{Binding CreditTermMonths}" 
                        TickFrequency="6" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=sliderTerm, Path=Value}" VerticalAlignment="Center"/>
            </Grid>

            <Border BorderBrush="#007ACC" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,30,0,0" Background="#E6F2FF">
                <StackPanel>
                    <TextBlock Text="Ежемесячный платеж:" FontSize="16"/>
                    <TextBlock Text="{Binding MonthlyPayment, StringFormat=C}" FontSize="24" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,10"/>
                    <TextBlock Text="Ставка: 15% годовых" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Назад" Click="BtnBack_Click" Width="100"/>
                <Button Content="Оформить" Click="BtnNext_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
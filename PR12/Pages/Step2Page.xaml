<Page x:Class="PR12.Step2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Step2Page">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Цвет и дополнительные опции" Style="{StaticResource HeaderStyle}"/>

            <Label Content="Цвет кузова:"/>
            <ComboBox Name="cmbColor" DisplayMemberPath="Name" SelectionChanged="CmbColor_SelectionChanged" Margin="0,0,0,20"/>

            <Label Content="Дополнительные опции:"/>
            <ListBox Name="lstOptions" SelectionMode="Multiple" Height="150" Margin="0,0,0,20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" 
                                  Checked="Option_CheckChanged" Unchecked="Option_CheckChanged"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Назад" Click="BtnBack_Click" Width="100"/>
                <Button Content="Далее" Name="btnNext" Click="BtnNext_Click" Width="100" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

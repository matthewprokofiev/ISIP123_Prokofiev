<Page x:Class="PR12.Step1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Step1Page">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Выбор модели и двигателя" Style="{StaticResource HeaderStyle}"/>

            <Label Content="Модель автомобиля:"/>
            <ComboBox Name="cmbModel" DisplayMemberPath="Name" SelectionChanged="CmbModel_SelectionChanged" Margin="0,0,0,20"/>

            <Label Content="Тип двигателя:"/>
            <ComboBox Name="cmbEngine" DisplayMemberPath="Name" SelectionChanged="CmbEngine_SelectionChanged" Margin="0,0,0,20" IsEnabled="False"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,0,0">
                <Button Content="Далее" Name="btnNext" Click="BtnNext_Click" Width="100" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

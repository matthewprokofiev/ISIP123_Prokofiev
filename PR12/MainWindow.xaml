<Window x:Class="PR12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR12"
        xmlns:vm="clr-namespace:PR12.ViewModels"
        xmlns:conv="clr-namespace:PR12.Converters"
        mc:Ignorable="d"
        Title="Конфигуратор Автомобиля" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Конфигуратор Автомобиля" Style="{StaticResource HeaderStyle}"/>
            <Grid Margin="0,0,0,20">
                <ProgressBar Minimum="1" Maximum="5" Value="{Binding CurrentStepDisplay}" Height="10"/>
                <TextBlock Text="{Binding CurrentStepDisplay, StringFormat='Шаг {0} из 5'}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            </Grid.Resources>

            <StackPanel Visibility="{Binding IsStep1, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Выберите модель автомобиля" Style="{StaticResource SubHeaderStyle}"/>
                <ComboBox ItemsSource="{Binding AvailableModels}" 
                          SelectedItem="{Binding Config.SelectedModel}"
                          DisplayMemberPath="Name"
                          Height="30" Margin="0,0,0,20"/>

                <TextBlock Text="Стоимость модели:" Foreground="Gray"/>
                <TextBlock Text="{Binding Config.SelectedModel.BasePrice, StringFormat=C0}" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Выберите тип двигателя" Style="{StaticResource SubHeaderStyle}"/>
                <ListBox ItemsSource="{Binding AvailableEngines}" 
                         SelectedItem="{Binding Config.SelectedEngine}"
                         Height="100">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text=" | Доплата: "/>
                                <TextBlock Text="{Binding PriceModifier, StringFormat=C0}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Visibility="{Binding IsStep2, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Выберите цвет кузова" Style="{StaticResource SubHeaderStyle}"/>
                <ComboBox ItemsSource="{Binding AvailableColors}" 
                          SelectedItem="{Binding Config.SelectedColor}"
                          Height="30" Margin="0,0,0,20">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="20" Height="20" Background="{Binding HexCode}" Margin="0,0,10,0" BorderBrush="Gray" BorderThickness="1"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text=" ("/>
                                <TextBlock Text="{Binding PriceModifier, StringFormat=C0}"/>
                                <TextBlock Text=")"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Дополнительные опции" Style="{StaticResource SubHeaderStyle}"/>
                <ScrollViewer Height="200">
                    <ItemsControl ItemsSource="{Binding Config.SelectedOptions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" 
                                          IsChecked="{Binding IsSelected}"
                                          Command="{Binding DataContext.OptionChangedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          Margin="0,5">
                                    <CheckBox.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding}"/>
                                                <TextBlock Text=" - "/>
                                                <TextBlock Text="{Binding DataContext.Price, StringFormat=C0, RelativeSource={RelativeSource AncestorType=CheckBox}}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </CheckBox.ContentTemplate>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Visibility="{Binding IsStep3, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Ваша конфигурация" Style="{StaticResource SubHeaderStyle}"/>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Базовая модель:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Config.SelectedModel.BasePrice, StringFormat=C0}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Двигатель:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Config.SelectedEngine.PriceModifier, StringFormat=C0}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Цвет:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Config.SelectedColor.PriceModifier, StringFormat=C0}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Опции (сумма):"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Config.TotalPrice, Converter={conv:OptionsPriceConverter}, ConverterParameter={x:Reference Name=ConfigRef}}" />
                </Grid>

                <Separator Margin="0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ИТОГО: " FontSize="20"/>
                    <TextBlock Text="{Binding Config.TotalPrice, StringFormat=C0}" FontSize="20" FontWeight="Bold" Foreground="#007ACC"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Visibility="{Binding IsStep4, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Расчет автокредита" Style="{StaticResource SubHeaderStyle}"/>
                <TextBlock Text="Ставка 15% годовых" Foreground="Gray" Margin="0,0,0,20"/>

                <TextBlock Text="Срок кредита (месяцев):"/>
                <StackPanel Orientation="Horizontal">
                    <Slider Minimum="12" Maximum="96" TickFrequency="12" IsSnapToTickEnabled="True" 
                            Value="{Binding Config.CreditTermMonths}" Width="300"/>
                    <TextBlock Text="{Binding Config.CreditTermMonths}" Margin="10,0" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="Первоначальный взнос (%):" Margin="0,20,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <Slider Minimum="10" Maximum="90" TickFrequency="5" IsSnapToTickEnabled="True" 
                            Value="{Binding Config.InitialPaymentPercent}" Width="300"/>
                    <TextBlock Text="{Binding Config.InitialPaymentPercent, StringFormat={}{0}%}" Margin="10,0" FontWeight="Bold"/>
                </StackPanel>

                <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,30,0,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Результаты расчета" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Сумма взноса:" Grid.Row="0"/>
                            <TextBlock Text="{Binding Config.DownPaymentAmount, StringFormat=C0}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"/>

                            <TextBlock Text="Сумма кредита:" Grid.Row="1" Margin="0,5"/>
                            <TextBlock Text="{Binding Config.CreditAmount, StringFormat=C0}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5"/>

                            <TextBlock Text="Ежемесячный платеж:" Grid.Row="2" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Config.MonthlyPayment, StringFormat=C0}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" 
Foreground="Red"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Visibility="{Binding IsStep5, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Оформление заявки" Style="{StaticResource SubHeaderStyle}"/>

                <TextBlock Text="Ваше имя:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Config.CustomerName, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                <TextBlock Text="Телефон (только цифры):" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Config.CustomerPhone, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                <TextBlock Text="E-mail:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Config.CustomerEmail, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                <TextBlock Text="* Кнопка отправки станет активной после заполнения всех полей" 
                           Foreground="Gray" FontStyle="Italic" Margin="0,20" TextWrapping="Wrap"/>
            </StackPanel>

        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Назад" 
                    Command="{Binding BackCommand}" 
                    Style="{StaticResource NavButtonStyle}" 
                    Background="Gray"/>

            <Button Content="Далее" 
                    Command="{Binding NextCommand}" 
                    Style="{StaticResource NavButtonStyle}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsStep5}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Оформить заявку" 
                    Command="{Binding SubmitCommand}" 
                    Style="{StaticResource NavButtonStyle}" Background="Green">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsStep5}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

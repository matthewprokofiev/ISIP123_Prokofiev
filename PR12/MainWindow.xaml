<Window x:Class="PR12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конфигуратор Автомобиля" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Мастер конфигурации" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" FontSize="18"/>
            <ProgressBar Name="pbProgress" Minimum="1" Maximum="5" Value="1" Height="20" Foreground="{StaticResource PrimaryColor}"/>
            <TextBlock Name="txtStepInfo" Text="Шаг 1 из 5" HorizontalAlignment="Right" Margin="0,5,0,0"/>
        </StackPanel>

        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
